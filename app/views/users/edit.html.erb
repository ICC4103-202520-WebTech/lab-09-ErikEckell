<h1>Edit User</h1>

<%= form_with model: @user, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :role %>
    <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "form-select" %>
  </div>

  <%= f.submit "Update User", class: "btn btn-success" %>
<% end %>
